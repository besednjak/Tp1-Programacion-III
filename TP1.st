Object subclass: #AlgoFix	instanceVariableNames: 'presupuestoParaPintar'	classVariableNames: ''	package: 'TP1'!!AlgoFix methodsFor: 'initialization' stamp: 'MarioBesednjak 5/23/2020 01:34'!initialize 		presupuestoParaPintar := PresupuestoParaPintar new.! !!AlgoFix methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/23/2020 01:50'!crearPintura: unColor conPrecioPorLitro: unPrecio manosPincel: unNumero manosRodillo: otroNumero 	| pintura |	pintura := Pintura deColor: unColor  conPrecioPorLitro: unPrecio yManosDePinturaConPincel: unNumero  yConRodillo: otroNumero.		^ pintura! !!AlgoFix methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/23/2020 02:38'!registrarPintorDePincel: unNombre conValorHora: unPrecio	| pintor |	pintor := PintorDePincel queSeLlama: unNombre yCobraPorHora: unPrecio.	presupuestoParaPintar agregarPintor: pintor.! !!AlgoFix methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/28/2020 22:35'!presupuestoMasBaratoParaPintarMetrosCuadrados: unNumero conPintura: unaPintura	(unNumero < 1) ifTrue: [MetrosCuadradosMenoresAUnoError signal].	unaPintura ifNil: [SePidioArmarPresupuestoSinIngresarPinturaError signal].	^ (presupuestoParaPintar metrosCuadrados: unNumero conPintura: unaPintura)! !!AlgoFix methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/25/2020 20:07'!registrarPintorDeRodillo: unNombre conValorHora: unPrecio		| pintor |	pintor := PintorDeRodillo queSeLlama: unNombre yCobraPorHora: unPrecio.		presupuestoParaPintar agregarPintor: pintor.! !!AlgoFix methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/21/2020 02:35'!manoDeObra: unNumero masMateriales: otroNumero 	^ unNumero + otroNumero.		! !Error subclass: #MetrosCuadradosMenoresAUnoError	instanceVariableNames: ''	classVariableNames: ''	package: 'TP1'!Object subclass: #PintorDePincel	instanceVariableNames: 'nombre precioPorHora horasPorMetroCuadrado litrosPorMetroCuadrado metrosCuadradosMinimosParaDescuento descuento'	classVariableNames: ''	package: 'TP1'!!PintorDePincel methodsFor: 'initialization' stamp: 'MarioBesednjak 5/25/2020 23:23'!initialize		super.	horasPorMetroCuadrado := 2. "horas que se tarda un pintor de pincel pintanto 1 metro cuadrado"	litrosPorMetroCuadrado := 4. "litros de pintura que se gastan pintando un metro cuadrado"	metrosCuadradosMinimosParaDescuento := 40. "cantidad minima de metros cuadrados para aplicar descuento"	descuento := 0.5. "descuento aplicado al presupuesto para pintar si hay que pintar masd e 50 metros cuadrados"! !!PintorDePincel methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/23/2020 01:49'!horasDeTrabajo	^ horasPorMetroCuadrado! !!PintorDePincel methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/25/2020 21:53'!manoDeObraPara: metrosCuadrados usando: pintura	| manoDeObra |	manoDeObra := (horasPorMetroCuadrado * precioPorHora * metrosCuadrados * (pintura manosDePinturaConPincel)).	^ (self aplicarDescuentoA: manoDeObra en: metrosCuadrados).! !!PintorDePincel methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/25/2020 23:26'!aplicarDescuentoA: manoDeObra en: metrosCuadrados	| manoDeObraConDescuento |	manoDeObraConDescuento := manoDeObra.     (metrosCuadrados >= metrosCuadradosMinimosParaDescuento) ifTrue: [manoDeObraConDescuento := manoDeObraConDescuento * descuento].	^ manoDeObraConDescuento! !!PintorDePincel methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/22/2020 00:50'!elPintor: unNombre cobraPorHora: unPrecio 	nombre := unNombre.	precioPorHora := unPrecio.! !!PintorDePincel methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/25/2020 21:51'!presupuestoParaPintar: metrosCuadrados conPintura: unaPintura	^ (self manoDeObraPara: metrosCuadrados usando: unaPintura) + (unaPintura costoDeMaterialUsando: litrosPorMetroCuadrado conPincelEn: metrosCuadrados)! !!PintorDePincel methodsFor: 'accessing' stamp: 'MarioBesednjak 5/21/2020 02:33'!nombre	^ nombre.! !!PintorDePincel methodsFor: 'accessing' stamp: 'MarioBesednjak 5/23/2020 01:59'!litrosPorMetroCuadrado 	^ litrosPorMetroCuadrado! !!PintorDePincel methodsFor: 'accessing' stamp: 'MarioBesednjak 5/25/2020 22:28'!descuento	^ descuento! !!PintorDePincel methodsFor: 'accessing' stamp: 'MarioBesednjak 5/23/2020 02:31'!precioPorHora		^ precioPorHora! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!PintorDePincel class	instanceVariableNames: ''!!PintorDePincel class methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/22/2020 00:52'!queSeLlama: unNombre yCobraPorHora: unPrecio 		| pintor |			pintor := self new.	pintor elPintor: unNombre cobraPorHora: unPrecio.		^ pintor! !Object subclass: #PintorDeRodillo	instanceVariableNames: 'nombre precioPorHora horasPorMetroCuadrado litrosPorMetroCuadrado'	classVariableNames: ''	package: 'TP1'!!PintorDeRodillo methodsFor: 'accessing' stamp: 'MarioBesednjak 5/23/2020 02:31'!precioPorHora		^ precioPorHora! !!PintorDeRodillo methodsFor: 'accessing' stamp: 'MarioBesednjak 5/23/2020 02:30'!litrosPorMetroCuadrado 	^ litrosPorMetroCuadrado! !!PintorDeRodillo methodsFor: 'accessing' stamp: 'MarioBesednjak 5/23/2020 02:31'!nombre	^ nombre.! !!PintorDeRodillo methodsFor: 'initialization' stamp: 'MarioBesednjak 5/27/2020 00:13'!initialize			super.	horasPorMetroCuadrado := 1. "horas que se tarda un pintor de rodillo pintanto 1 metro cuadrado"	litrosPorMetroCuadrado := 5. "litros de pintura que se gastan pintando un metro cuadrado"! !!PintorDeRodillo methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/23/2020 02:30'!horasDeTrabajo	^ horasPorMetroCuadrado! !!PintorDeRodillo methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/23/2020 02:29'!manoDeObraPara: metrosCuadrados usando: pintura.	^ (horasPorMetroCuadrado * precioPorHora * metrosCuadrados * (pintura manosDePinturaConRodillo)).! !!PintorDeRodillo methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/23/2020 02:24'!elPintor: unNombre cobraPorHora: unPrecio.	nombre := unNombre.	precioPorHora := unPrecio. ! !!PintorDeRodillo methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/25/2020 19:50'!presupuestoParaPintar: metrosCuadrados conPintura: unaPintura	^((self manoDeObraPara: metrosCuadrados usando: unaPintura) + (unaPintura costoDeMaterialUsando: litrosPorMetroCuadrado conRodilloEn: metrosCuadrados)) ! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!PintorDeRodillo class	instanceVariableNames: ''!!PintorDeRodillo class methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/23/2020 02:25'!queSeLlama: unNombre yCobraPorHora: unPrecio 		| pintor |			pintor := self new.	pintor elPintor: unNombre cobraPorHora: unPrecio.		^ pintor! !Object subclass: #Pintura	instanceVariableNames: 'color precioPorLitro manosDePinturaConPincel manosDePinturaConRodillo'	classVariableNames: ''	package: 'TP1'!!Pintura methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/23/2020 01:47'!costoDeMaterialUsando: litrosDePintura conRodilloEn: metrosCuadrados.	^ (litrosDePintura * precioPorLitro * metrosCuadrados * manosDePinturaConRodillo)! !!Pintura methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/26/2020 21:36'!costoDeMaterialUsando: litrosDePintura conPincelEn: metrosCuadrados.	^ (litrosDePintura * precioPorLitro * metrosCuadrados * manosDePinturaConPincel)! !!Pintura methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/23/2020 01:43'!deColor: unColor cuestaPorLitro: unPrecio ySeUsanManosDePinturaConPincel: unNumero yConRodillo: otroNumero.	color := unColor.	precioPorLitro := unPrecio.	manosDePinturaConPincel := unNumero.	manosDePinturaConRodillo := otroNumero.! !!Pintura methodsFor: 'accessing' stamp: 'MarioBesednjak 5/22/2020 01:27'!precioPorLitro	^ precioPorLitro.! !!Pintura methodsFor: 'accessing' stamp: 'MarioBesednjak 5/23/2020 01:44'!manosDePinturaConRodillo	^ manosDePinturaConRodillo ! !!Pintura methodsFor: 'accessing' stamp: 'MarioBesednjak 5/23/2020 01:44'!manosDePinturaConPincel	^ manosDePinturaConPincel ! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!Pintura class	instanceVariableNames: ''!!Pintura class methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/23/2020 01:37'!deColor: unColor conPrecioPorLitro: unPrecio yManosDePinturaConPincel: unNumero yConRodillo: otroNumero	| pintura |		pintura := self new.	pintura deColor: unColor cuestaPorLitro: unPrecio ySeUsanManosDePinturaConPincel: unNumero yConRodillo: otroNumero.			^ pintura! !Object subclass: #PresupuestoParaPintar	instanceVariableNames: 'pintores presupuestos'	classVariableNames: ''	package: 'TP1'!!PresupuestoParaPintar methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/27/2020 19:28'!pintorMasBarato	^ presupuestos at: (presupuestos keys)min	! !!PresupuestoParaPintar methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/22/2020 02:15'!responsable	^ ((self pintorMasBarato) nombre)! !!PresupuestoParaPintar methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/27/2020 19:28'!valor	^ (presupuestos keys)min ! !!PresupuestoParaPintar methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/28/2020 22:41'!metrosCuadrados: metrosCuadrados conPintura: unaPintura	(pintores isEmpty) ifTrue: [SePidioArmarPresupuestoSinTenerPintoresRegistradosError signal].	self armarPresupuestosCon: metrosCuadrados y: unaPintura.	^ self 	! !!PresupuestoParaPintar methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/25/2020 23:14'!agregarPintor: unPintor	pintores add: unPintor.! !!PresupuestoParaPintar methodsFor: 'as yet unclassified' stamp: 'MarioBesednjak 5/28/2020 00:57'!armarPresupuestosCon: metrosCuadrados y: unaPintura	| presupuestoPintor |	pintores do: [ :unPintor |		presupuestoPintor := (unPintor presupuestoParaPintar: metrosCuadrados conPintura: unaPintura).  		presupuestos at: presupuestoPintor ifAbsentPut: unPintor.	]! !!PresupuestoParaPintar methodsFor: 'initialization' stamp: 'MarioBesednjak 5/28/2020 00:57'!initialize		pintores := OrderedCollection new.	presupuestos := OrderedDictionary new. ! !Error subclass: #SePidioArmarPresupuestoSinIngresarPinturaError	instanceVariableNames: ''	classVariableNames: ''	package: 'TP1'!Error subclass: #SePidioArmarPresupuestoSinTenerPintoresRegistradosError	instanceVariableNames: ''	classVariableNames: ''	package: 'TP1'!